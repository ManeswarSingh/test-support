<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <style>
         body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .navbar {
            background-color: #333;
            overflow: hidden;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }
        .navbar a {
            color: #fff;
            text-decoration: none;
            margin-right: 20px;
            transition: color 0.3s;
            font-weight: bold;
        }
        .navbar a:hover {
            color: #ddd;
        }
        .navbar .logo {
            font-size: 24px;
            color: #fff;
            text-decoration: none;
        }
        .navbar .nav-links {
            display: flex;
            align-items: center;
        }
        /* body {
            font-family: Arial, sans-serif;
        } */
        body {
            font-family: Arial, sans-serif;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        th {
            background-color: #f2f2f2;
        }
        .response-btn {
            background-color: #4CAF50;
            color: white;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .response-btn:hover {
            background-color: #45a049;
        }
        .message-cell {
            max-height: 60px; /* Adjust as needed */
            overflow: hidden;
            max-width: 180px;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
        .message-cell:hover {
            overflow: auto;
            white-space: normal;
            word-wrap: break-word;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="/" class="logo">Support Ticket System</a>
        <div class="nav-links">
            <a href="/" class="active">Home</a>
            <a href="/admin">Admin</a>
            <a href="/ticket/form">Support Ticket</a>
        </div>
    </div>
    <h1>Admin Page - All Tickets</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Urgency</th>
                <th>Message</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% tickets.forEach(ticket => { %>
                <tr>
                    <td><%= ticket.name %></td>
                    <td><%= ticket.email %></td>
                    <td><%= ticket.urgency %></td>
                    <td class="message-cell" title="<%= ticket.message %>"><%= ticket.message %></td>
                    <td><button class="response-btn"><a href="/response/send">Response</a></button></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <script>
        function respondToTicket(ticketId) {
            // You can implement the logic to respond to the ticket here
            alert('Responding to ticket with ID: ' + ticketId);
        }
    </script>
</body>
</html>
